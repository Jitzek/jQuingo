{
  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "public/*", "build/*", "dist/*"],
  "compilerOptions": {
    "outDir": "./dist/",
    "strict": true,
    "noImplicitAny": true,
    // "module": "es6",
    // Required for dynamic imports
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    // https://webpack.js.org/guides/development/#using-source-maps
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@routes/*": ["src/routes/*"],
      "@css/*": ["static/css/*"],
      "@fonts/*": ["static/fonts/*"],
      "@img/*": ["static/img/*"]
    }
  }
}
